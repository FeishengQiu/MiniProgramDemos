/* pages/home/home.wxss */

.navi_bar {
  width: 100%;
  height: 100rpx;
  display: flex;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}

.search_bar {
  width: 550rpx;
  height: 60rpx;
  margin-right: 20rpx;
  background-color: #f1f1f1;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
}

.search_bar icon {
  margin-left: 20rpx;
}

.summary {
  display: flex;
  height: 60rpx;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.summary image {
  width: 30rpx;
  height: 30rpx;
}
.summary text{
  font-size: 22rpx;
}

.slot_menu {
  display: flex;
  align-items: center;
  justify-content: center;
}

.slot_menu image {
  height: 35rpx;
  width: 35rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.slot_menu .menu_text {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}
