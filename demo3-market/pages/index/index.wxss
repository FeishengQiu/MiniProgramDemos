/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 100%;
}

.swiper_container {
  width: 750rpx;
  height: 370rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

swiper {
  width: 730rpx;
  height: 350rpx;
}

swiper image {
  width: 730rpx;
  height: 350rpx;
  border-radius: 10rpx;
}

.nav_container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background: #09f;
  border-radius: 10rpx;
  margin: 0 10rpx;
}

.nav_container .single_menu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin-bottom: 10rpx;
}

.nav_container .single_menu image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.nav_container .single_menu text {
  color: #fff;
  font-size: 25rpx;
  margin-bottom: 10rpx;
}

.hot_goods {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  font-weight: 1000
}

.goods_container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #576b95;
}

.single_goods {
  display: flex;
  flex-direction: column;
  width: 365rpx;
}

.single_goods image {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-top-color: #666;
}

.single_goods .goods_info {
  display: flex;
  width: 100%;
  justify-content: center;
}

.single_goods .goods_info .price {
  color: red;
}
