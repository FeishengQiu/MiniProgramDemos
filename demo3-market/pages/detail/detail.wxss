/* pages/detail/detail.wxss */

.swiper_container{
width: 750rpx;
height: 370rpx;
padding: 10rpx;
box-sizing: border-box;
}

swiper{
width: 730rpx;
height:350rpx;
}

swiper image{
width: 730rpx;
height: 350rpx;
border-radius: 10rpx;
}

swiper video{
width: 100%;
height: 350rpx;
border-radius: 10rpx;
}

.image_container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%
  margin-top: 20rpx;
}

.image_container image{
  margin: 10rpx 0;
  width: 100%;
}

.btn_container{
  display: flex;
  width: 750rpx;
  flex-direction: row;
  position: absolute;
  left: 0;
  bottom: 0
}

.btn_container button{
  width: 50%;
  background-color: #576b95
}

scroll-view{
  width: 750rpx;
  height: 100vh;
}