/* pages/login/login.wxss */

.login_container {
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

text {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.phone_number input {
  margin: 20rpx 30rpx;
  border: 1rpx solid #576b95;
  height: 80rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx
}

.code_container {
  display: flex;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.btn_code {
  background-color: #576b95;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn_code_hover{
  background-color: #576b50;
}

.code_container input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #576b95;
  padding: 10rpx 20rpx;
  border-radius: 10rpx
}
